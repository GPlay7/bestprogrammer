<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="10dp"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity" android:background="@drawable/backgroundo">

        <TextView
        android:id="@+id/txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TOP 5 PROGRAMMERS"
        android:textColor="#fff"
        android:textStyle="italic"
        android:gravity="center"
        android:textSize="30sp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />




            <Button
                android:id="@+id/btnDenishRichi"
                android:text="Dennis Ritchie"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:background="@drawable/custom_button"
                android:layout_below="@+id/txt"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="45dp" />

            <Button
                android:id="@+id/btnMarkJukarBarg"
                android:text="Mark Jukar Barg"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:background="@drawable/custom_button"
                android:layout_below="@+id/btnDenishRichi"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp" />

            <Button
                android:id="@+id/btnsteveWazniak"
                android:text="Steve Wazniak"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:background="@drawable/custom_button"
                android:layout_below="@+id/btnMarkJukarBarg"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp" />

            <Button
                android:id="@+id/btnBillGates"
                android:text="Bill Gates"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:background="@drawable/custom_button"
                android:layout_below="@+id/btnsteveWazniak"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp" />

            <Button
                android:id="@+id/btnLinus"
                android:text="Linus Torvalds"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:background="@drawable/custom_button"
                android:layout_below="@+id/btnBillGates"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp" />

</LinearLayout>
